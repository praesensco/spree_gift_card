<div data-hook="admin_gift_card_form_fields" class="row clearfix">
  <% e_gift_card = @is_e_gift_card || f.object.persisted? && f.object.e_gift_card? %>
  <% if e_gift_card %>
    <div class="col-md-5">
      <%= f.field_container :email do %>
        <%= f.label :email, Spree.t("recipient_email") %> <span class="required">*</span><br/>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.error_message_on :email %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :name do %>
        <%= f.label :name, Spree.t("recipient_name") %> <span class="required">*</span><br/>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :sender_email do %>
        <%= f.label :sender_email, Spree.t("sender_email") %> <span class="required">*</span><br/>
        <%= f.text_field :sender_email, class: 'form-control' %>
        <%= f.error_message_on :sender_email %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :sender_name do %>
        <%= f.label :sender_name, Spree.t("sender_name") %> <span class="required">*</span><br/>
        <%= f.text_field :sender_name, class: 'form-control' %>
        <%= f.error_message_on :sender_name %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :delivery_on do %>
        <%= f.label :delivery_on, Spree.t("delivery_on") %> <span class="required">*</span><br/>
        <%= f.datetime_select :delivery_on, class: 'form-control' %>
        <%= f.error_message_on :delivery_on %>
      <% end %>
    </div>
    <div class="col-md-5">
      <%= f.field_container :note do %>
      <%= f.label :note %>
      <%= f.text_area :note, rows: 3, class: 'form-control' %>
      <%= f.error_message_on :note %>
      <% end %>
    </div>
  <% end %>
  <%= f.hidden_field :e_gift_card, value: e_gift_card %>
  <div class="col-md-5">
    <%= f.field_container :original_value do %>
      <%= f.label :original_value, Spree.t(:value) %> <span class="required">*</span><br/>
      <%= f.text_field :original_value, class: 'form-control' %>
    <% end %>
  </div>

</div>
